<%= render "govuk_publishing_components/components/heading", {
  text: "Your wishlist",
  heading_level: 1,
  margin_top: 0,
  margin_bottom: 3,
} %>
<%= render "govuk_publishing_components/components/lead_paragraph", {
  text: "Fill in with your interests, hobbies and any other clues to help your secret santa select the perfect gift.",
  margin_bottom: 5
} %>
<%= render "govuk_publishing_components/components/lead_paragraph", {
  text: "You might want to list any allergies you have or tell us you're a vegetarian and whether or not you drink alcohol.",
  margin_bottom: 5
} %>

<%= form_with do %>
  <% if flash[:alert] %>
    <%= render "govuk_publishing_components/components/error_alert", { message: sanitize(flash[:alert]) } %>
  <% end %>
  <% if flash[:old_wishlist] %>

    <%= render "govuk_publishing_components/components/inset_text", {
      } do %>
        <div>
          Just in case you deleted it by mistake, your wishlist used to be:<br>
          <%= flash[:old_wishlist] %>
        </div>
      <% end %>
  <% end %>
  <%= render "govuk_publishing_components/components/textarea", {
    margin_bottom: 6,
    label: {
      text: ""
    },
    value: current_user.wishlist,
    name: "wishlist",
    id: "wishlist"
  } %>

  <%= render "govuk_publishing_components/components/button", {
    text: "Save"
  } %>
<% end %>
